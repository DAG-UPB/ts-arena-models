# --- API Configuration ---
# The base URL for the TS-Arena API Portal
API_BASE_URL=http://api-portal:8000

# Security key for uploading forecasts to the API Portal
# You can obtain this from your user profile in the API Portal
API_UPLOAD_KEY=your_api_upload_key_here

# Your unique User ID in the TS-Arena system
USER_ID=your_user_id_here

# --- Master Controller Configuration ---
# The internal URL for the Master Controller API
MASTER_CONTROLLER_URL=http://master-controller-api:8000

# Docker network name used by the controller (defaults to tsfm-arena_default if not set)
# DOCKER_NETWORK=tsfm-arena_default

# --- Service Behavior ---
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Interval in seconds to check for new challenges
CHECK_INTERVAL=300

# Request timeout in seconds for API calls
REQUEST_TIMEOUT=600
